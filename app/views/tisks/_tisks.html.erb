<ul class="media-list">
  <% tisks.each do |tisk| %>
    <% user = tisk.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= tisk.created_at %></span>
        </div>
        <div>
          <p>タスク: <%= tisk.content %></p>
        </div>
        <div>
          <p>ステータス: <%= tisk.status %></p>
        </div>
        
        
        <div>
          <% if current_user == tisk.user %>
            <%= link_to "Edit", edit_tisk_path(tisk), class: 'btn btn-success btn-xs' %>
            <%= link_to "Delete", tisk, method: :delete, data: { confirm: "本当に削除しますか?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tisks %>
</ul>

