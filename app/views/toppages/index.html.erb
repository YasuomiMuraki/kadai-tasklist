<% if logged_in? %>

  <div class="row">
    <aside class="col-md-4">
      
<%= form_for(@tisk) do |f| %>

        <div class="form-group">
          <%= f.label :content, 'タスク' %>
<%= f.text_field :content, class: 'form-control', rows: 1 %>

        </div>

 <div class="form-group">
          <%= f.label :status, 'ステータス' %>
<%= f.text_field :status, class: 'form-control', rows: 1 %>

        </div>        
        
<%= f.submit 'Post', class: 'btn btn-primary btn-block' %>

      
<% end %>

    </aside>
    <div class="col-xs-8">
      
<%= render 'tisks/tisks', tisks: @tisks, user: @user %>

    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Microposts</h1>

<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %> 

 </div>
</div>

<% end %>
